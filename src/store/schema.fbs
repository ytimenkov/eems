namespace eems;

struct ObjectKey {
    id: int64;
}

struct ResourceKey {
    id: int64;
}

union KeyUnion {
    ObjectKey,
    ResourceKey,
}

table LibraryKey {
    key: KeyUnion;
}

table Resource {
    location: [ubyte];
    mime_type: [ubyte];
}

table ResourceRef {
    ref: [ubyte] (nested_flatbuffer: "LibraryKey", required);
    protocol_info: [ubyte] (required);
}

table MediaObjectRef {
    ref: [ubyte] (nested_flatbuffer: "LibraryKey", required);
}

table MediaContainer {
    objects: [MediaObjectRef];
}

table MediaItem {
    resources: [ResourceRef];
}

union ObjectUnion {
    MediaContainer,
    MediaItem,
}

table MediaObject {
    id: ObjectKey (required);
    parent_id: ObjectKey (required);
    dc_title: [ubyte] (required);
    upnp_class: [ubyte]  (required);
    data: ObjectUnion;
}

